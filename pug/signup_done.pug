// Served after signup
// ARGS: ok: true|false, based on success of signup
//       name: Registered/attempted username

include mixins.pug

doctype html
html
  +pageHead("Signup OK")

  body

    +layoutBase()
      +appTitle()
      +navBarCollapsible("signup_done")

    +layoutBase()
      - if (ok) {
        p.text-success Registered user #{name} successfully.
        p
          | You can 
          a(href='/login')
            button.btn.btn-success Login
          |  
          | now.
      - } else {
        p.text-danger
          Username #{name} already taken. Try again.
      - }

    +layoutBase()
      +appFooter()
